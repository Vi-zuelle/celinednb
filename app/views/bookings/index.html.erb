<div class="container my-5">
  <div class="row mt-3">
      <% if @bookings.exists? %>
        <div class="d-flex mt-4">
          <%= image_tag current_user.avatar, class: "avatar-profile mr-3" %>
          <div class="text-left">
            <h2><strong><%= current_user.first_name.capitalize %></strong>'s Booked CélineVersions.</h2>
            <h5>Check all your upcoming bookings and each booking status.</h5>
          </div>
        </div>
        <% @bookings.each do |t| %>
          <div class="col-md-6">
            <div class="card-container mt-4 mb-4">
              <p class="p-2"><strong>Booking ID #<%= t.id %></strong></p>
              <h4 class="p-2 border-top">You booked <strong><%= t.celineversion.name.upcase %></strong></h4>
              <%= image_tag t.celineversion.image, width: 300%>
              <div class="card-container-cont">
                <ul class="card-list">
                  <li><p>You booked this version starting the: <b><%= t.start_date %></b></p></li>
                  <li><p>Your booking will end on: <b><%= t.end_date %></b></p></li>
                  <li><p class="mt-3">Booking Price : <b><%= t.celineversion.price %> $CAD/day</b></p></li>
                  <li><h4 class="mt-3">Current Booking Status : <b><%= t.status.upcase %></b></h4></li>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="d-flex mt-4">
          <%= image_tag current_user.avatar, class: "avatar-profile mr-3" %>
            <div class="text-left">
              <h2><strong><%= current_user.first_name.capitalize %></strong>'s Booked CélineVersions.</h2>
              <h5>You have no upcoming bookings for the moment.</h5>
            </div>
        </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-6">
      <p>List all the available CelineVersions. We know you'll find your joy!</p>
      <%= link_to "Display All CélineVersions", celineversions_path, { class: "btn btn-dark" } %>
      </div>
    </div>
  <% end %>
</div>
