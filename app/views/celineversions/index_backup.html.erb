<div class="container my-5">

  <h2><strong>All the available CélineVersions</strong></h2>
  <h5 class="mb-5">Choose the version of Céline that fits your style.</h5>

  <!-- Seach bar start -->
  <div class="search_form">

    <%= form_tag celineversions_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control search_bar",
        placeholder: "find a celineversion"
      %>

      <%= submit_tag "Search", class: "btn btn-outline-dark search_btn" %>
    <% end %>
  </div>
  <!-- Seach bar end -->

  <div class="row">
    <% @celineversions.each do |t| %>
      <div class="col-md-4">

        <div class="card-container cc-hover mb-4">
          <%= image_tag t.image, width: 300 %>
          <div class="card-container-infos">
            <h2 class="text-left"><%= t.name  %></h2>
            <h4 class="mt-3 text-justify"><%= t.description %></h4>
              <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
          </div>

          <div class="text-center mb-4">
            <h4 class="mb-2"><strong><%= t.price %> $CAD/day</strong></h4>
            <%= link_to "CHECK THIS VERSION", celineversion_path(t), { class: "btn btn-outline-dark font-weight-bold" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


