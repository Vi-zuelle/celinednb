<div class="container">
  <div class="row">
    <% @celineversions.each do |t| %>
      <div class="col-md-6">
        <p class="card-trip"><%= image_tag "#{t.image}", width: 300%></p>
          <div class="card-trip-infos">
            <div>
              <h2><%= t.name  %></h2>
              <p><%= t.description %></p>
            </div>
            <h3 class="card-trip-pricing"><%= t.price %> $CAD</h3>
            <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
          </div>
      </div>
    <% end %>
  </div>
</div>


