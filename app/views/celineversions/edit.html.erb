<div class="container my-5">
  <h1 class="mt-5">Editing this version > <strong><%= @celineversion.name %></strong></h1>
  <h5 class="mb-4">Want to improve your beloved Diva? Yes, you can.</h5>
  <div class="row">
    <div class="col-md-12">
      <div class="card-form">
        <img src="https://france3-regions.francetvinfo.fr/bretagne/sites/regions_france3/files/styles/top_big/public/assets/images/2019/10/09/maxpaimages658694-4461971.jpg?itok=msyb1q_-" />
          <div class="card-form-display">
            <%= simple_form_for([@user, @celineversion]) do |f| %>
              <%= f.input :name, as: :string, placeholder: "Choose a new name for your version", label: "A new name?" %>
              <%= f.input :description, as: :text, placeholder: "Edit the description of your version", label: "A better description?" %>
              <%= f.input :price, as: :integer, placeholder: "Choose a new price in $CAD for your CélineVersion", label: "A million $CAD version, maybe?" %>
              <%= f.input :image, as: :string, placeholder: "Paste a new url of the image your CélineVersion", label: "Have a better picture?" %>
              <%= f.submit "Update", class: "btn btn-outline-success"%>
            <% end %>
          </div>
      </div>
      <div class="mt-5 text-right"><%= link_to "GO BACK", :back, class: "btn btn-light active" %></div>
    </div>
  </div>
</div>
